<div class="col-md-12">
  <h1><%= @post.title %></h1>
  <%= form_for @post, url:{action: :update} do |f| %>
    <div class="form-group">
      <label for="form-title">記事タイトル</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label for="blog_body">本文</label>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "カテゴリ" %><br>
      <%= f.collection_select(:category_id, Category.all, :id, :title, class: "form-control") %>
    </div>
    <%= f.submit '更新する', class: "btn btn-primary" %>
    <%= link_to '削除する', post_path, method: :delete, class: "btn btn-danger" %>
  <% end -%>
</div>

